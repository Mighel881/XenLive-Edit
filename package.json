{
  "name": "xenlive-edit",
  "displayName": "xenlive-edit",
  "description": "Client extension that communciates with XenLive on your iOS device.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xenlive-edit.enable",
        "title": "XenLive Edit: Enable"
      },
      {
        "command": "xenlive-edit.disable",
        "title": "XenLive Edit: Disable"
      }
    ],
    "configuration": {
      "title": "XenLive Edit",
      "properties": {
        "xenlive-edit.remote.deviceIP": {
          "type": "string",
          "format": "ipv4",
          "description": "The IPV4 address of the device."
        },
        "xenlive-edit.remote.widgetPath": {
          "type": "string",
          "description": "The path to the widget being edited.",
          "pattern": "^/var/mobile/Library/Widgets/.+"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "bent": "^7.3.12",
    "rsync": "^0.6.1"
  }
}
